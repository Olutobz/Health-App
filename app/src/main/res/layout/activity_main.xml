<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        tools:context=".MainActivity">


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:context=".MainActivity">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-60dp"
                android:layout_marginTop="-35dp"
                android:src="@drawable/ellipse_two" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/left_pacing_nurse" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:text="E-Health"
                    android:fontFamily="@font/motown"
                    android:textColor="#33cc99"
                    android:textSize="36dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="205dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/roboto_black"
                android:text="Sign up to the best health emergency app to track your health, get health tips and get the services of medical professionals."
                android:textAlignment="center"
                android:textColor="#33cc99"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="225dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/elipse_one" />

        </FrameLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/text_border">

            <ImageView
                android:id="@+id/doctor"
                android:layout_width="98dp"
                android:layout_height="88dp"
                android:layout_marginTop="51dp"
                android:layout_marginBottom="69dp"
                android:src="@drawable/doctor_sideway" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/doctor"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="37dp"
                    android:fontFamily="@font/rock_b"
                    android:text="How to use"
                    android:layout_marginBottom="8dp"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rock_b"
                    android:textAlignment="textStart"
                    android:text="Sign Up as a user or specialist. Login and the app is ready to be used"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />


            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/text_border">

            <ImageView
                android:id="@id/doctor"
                android:layout_width="98dp"
                android:layout_height="88dp"
                android:layout_marginTop="51dp"
                android:layout_marginBottom="69dp"
                android:src="@drawable/doctor_sideway" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/doctor"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="37dp"
                    android:fontFamily="@font/rock_b"
                    android:text="Features"
                    android:layout_marginBottom="8dp"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rock_b"
                    android:text="Monitor your health,Report as emergency, Access to medical professional and Receive health tips"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

            </LinearLayout>
        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="23dp"
            android:background="@drawable/green_rounded_border"
            android:fontFamily="@font/rock_b"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>
</ScrollView>

