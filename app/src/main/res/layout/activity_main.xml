<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FA7F72"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/first_line"
            android:layout_width="10dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/white_line" />

        <View
            android:id="@+id/second_line"
            android:layout_width="10dp"
            android:layout_height="120dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/first_line"
            android:background="@drawable/red_line" />

        <View
            android:id="@+id/third_line"
            android:layout_width="10dp"
            android:layout_height="250dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/second_line"
            android:background="@drawable/green_line" />

        <View
            android:id="@+id/fourth_line"
            android:layout_width="10dp"
            android:layout_height="300dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/third_line"
            android:background="@drawable/purple_line" />

        <View
            android:id="@+id/fifth_line"
            android:layout_width="10dp"
            android:layout_height="200dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/fourth_line"
            android:background="@drawable/green_line" />

        <View
            android:id="@+id/sixth_line"
            android:layout_width="10dp"
            android:layout_height="220dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/fifth_line"
            android:background="@drawable/red_line" />

        <View
            android:id="@+id/seventh_line"
            android:layout_width="10dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/sixth_line"
            android:background="@drawable/white_line" />
        <View
            android:id="@+id/eight_line"
            android:layout_width="10dp"
            android:layout_height="230dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/seventh_line"
            android:background="@drawable/green_line" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/eApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/baloo"
            android:text="@string/e_app"
            android:textColor="#fff"
            android:textSize="60sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/pmcrg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="50dp"
                android:fontFamily="cursive"
                android:text="@string/pmcrg"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="30sp" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>